{
  "compilerOptions": {
     "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
     "lib": ["ESNext"],
     "sourceMap": true,
     "outDir": "./build",
     "rootDir": "./src",
    "strict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,
     "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
